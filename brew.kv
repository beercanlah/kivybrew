<PropertyLabel@Label>:
    halign: 'left'
    text_size: self.width, None


<BrewControl>:
    GridLayout:
        cols: 2
        x: root.width / 8
        width: root.width / 4
        top: root.height - root.height / 8
        row_default_height: 30
        row_force_default: True

        PropertyLabel:
            text: 'Temperature'

        PropertyLabel:
            text: str(root.temperature)

        PropertyLabel:
            text: 'Heater'

        PropertyLabel:
            halign: 'center'
            text: 'on' if root.heater_status else 'off'

        PropertyLabel:
            text: 'Pump'

        Button:
            text: 'on' if root.pump_status else 'off'
            on_press: root.toggle_pump()

        PropertyLabel:
            text: 'PID'

        Button:
            text: 'on' if root.pid_status else 'off'
            on_press: root.toggle_pid()
